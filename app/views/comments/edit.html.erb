<div class="container">
  <div class="row my-5">
    <div class="col-md-5 m-auto">
      <div class="card rounded-5">
        <h2 class="card-title mx-auto my-3">Edit comment</h2>
        <div class="card-body">
          <%= form_with(model:[ @article, @comment ], local: true) do |f| %>  
            <div class="form-group">
              <%= f.label :commenter %>
              <%= f.text_field :commenter, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :body %>
              <%= f.text_area :body, {class: "form-control", style: "height: 100px"}%>
            </div>
              <%= f.submit 'Edit comment', class:"btn btn-primary mb-3" %>
          <% end %>

          <%= link_to 'Back', article_path(@article) %>
        </div>
        <!--card-body-->
      </div>
      <!--card-->
    </div>
    <!--col-md-6-->
  </div>
  <!--row-->
</div>
<!--container>-->
